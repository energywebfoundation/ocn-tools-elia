{
  "name": "@energyweb/ocn-tools",
  "version": "0.2.0",
  "description": "Common tools for aiding development of applications built on top of the OCN",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "start": "ts-node src/index.ts",
    "start-cpo": "ts-node src/index.ts mock --cpo",
    "start-msp": "ts-node src/index.ts mock --msp",
    "test": "mocha --require ts-node/register 'test/**/*.spec.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/energywebfoundation/ocn-tools.git"
  },
  "author": "Energy Web",
  "license": "GPL-3.0-or-later",
  "homepage": "https://github.com/energywebfoundation/ocn-tools#readme",
  "dependencies": {
    "@energyweb/ocn-bridge": "git+https://github.com/energywebfoundation/ocn-bridge.git#v2",
    "better-sqlite3": "^5.4.3",
    "random-js": "^2.1.0",
    "uuid": "^3.3.3",
    "yargs": "^14.2.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^5.4.0",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^8.0.0",
    "@types/node-fetch": "^2.5.7",
    "@types/uuid": "^3.4.5",
    "@types/yargs": "^13.0.3",
    "chai": "^4.2.0",
    "mocha": "^8.1.1",
    "node-fetch": "^2.6.0",
    "ts-node": "^8.10.2",
    "tslint": "^5.20.0",
    "typescript": "^3.9.7"
  }
}
